{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#is "home"}}
{{#if @site.cover_image}}
<img id="cover-image" src="{{@site.cover_image}}" alt="{{@site.description}}" />
{{else if @site.description}}
<header class="page-head">
    <h2 class="page-head-title">{{@site.description}}</h2>
</header>
{{/if}}
{{/is}}

<div class="post-feed">
    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    {{#get "pages" id="5f39106c430f7be36893f0e7" include="tags,authors" as |post|}}
    {{#post}}
    {{!-- "Join Us" --}}
    <article class="post-card {{post_class}}" style="background-image: url({{img_url feature_image size="l"}})">
        <a class="post-card-link" href="{{url}}">
            <div class="post-card-content">
                {{!-- Commenting this out. In the future, this should probably be some SVG text --}}
                <!-- <h2 class="post-card-title">{{title}}</h2> -->
            </div>
        </a>
    </article>
    {{/post}}
    {{/get}}
    {{#get "posts" include="tags,authors" limit="1" filter="featured:true+tags:homepage" order="published_at desc" }}
    {{#foreach posts}}
    {{> "post-card"}}
    {{/foreach}}
    {{/get}}
    {{#get "posts" include="tags,authors" limit="all" filter="featured:false+tags:homepage" order="published_at desc" }}
    {{#foreach posts}}
    {{> "post-card"}}
    {{/foreach}}
    {{/get}}
    <div class="numbers">
        <div class="number-box">
            <span>250</span>
            <span>Volunteers</span>
        </div>
        <div class="number-box">
            <span>15</span>
            <span>Sections</span>
        </div>
        <div class="number-box">
            <span>8000</span>
            <span>Int. Students</span>
        </div>
    </div>
</div>